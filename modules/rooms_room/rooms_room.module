/**
 * Implements hook_entity_info_alter().
 *
 * We are adding the info about the room types via a hook to avoid a recursion
 * issue as loading the room types requires the entity info as well.
 *
 * @todo This needs to be improved
 */
function rooms_room_entity_info_alter(&$entity_info) {
  foreach (rooms_room_get_types() as $type => $info) {
    $entity_info['rooms_room']['bundles'][$type] = array(
      'label' => $info->label,
      'admin' => array(
        'path' => 'admin/rooms/room_types/manage/%rooms_room_type',
        'real path' => 'admin/rooms/room_types/manage/' . $type,
        'bundle argument' => 4,
        'access arguments' => array('administer rooms'),
      ),
    );
  }
}
  

/**
 * Implements hook_permission().
 */
function rooms_room_permission() {
  // We set up permisssions to manage entity types, manage all entities and the
  // permissions for each individual entity
  $permissions = array(
    'administer room types' => array(
      'title' => t('Administer room types'),
      'description' => t('Create and delete fields for room types, and set their permissions.'),
    ),
    'administer rooms' => array(
      'title' => t('Administer rooms'),
      'description' => t('Edit and delete all rooms'),
    ),  
  );
  
  //Generate permissions per room 
  foreach (rooms_room_get_types() as $type) {
    $type_name = check_plain($type->type);
    $permissions += array(
      "edit any $type_name room" => array(
        'title' => t('%type_name: Edit any room', array('%type_name' => $type->label)),
      ),
      "view any $type_name room" => array(
        'title' => t('%type_name: View any room', array('%type_name' => $type->label)),
      ),
    );
  }
  return $permissions;  
}


/**
 * Determines whether the given user has access to a room.
 *
 * @param $op
 *   The operation being performed. One of 'view', 'update', 'create', 'delete'
 *   or just 'edit' (being the same as 'create' or 'update').
 * @param $room
 *   Optionally a room or a room type to check access for. If nothing is
 *   given, access for all rooms is determined.
 * @param $account
 *   The user to check for. Leave it to NULL to check for the global user.
 * @return boolean
 *   Whether access is allowed or not.
 */
function rooms_room_access($op, $room = NULL, $account = NULL) {
  if (user_access('administer rooms', $account)) {
    return TRUE;
  }
  if (isset($room) && $type_name = $room->type) {
    $op = ($op == 'view') ? 'view' : 'edit';
    if (user_access("$op any $type_name room", $account)) {
      return TRUE;
    }
  }
  return FALSE;
}


/**
 * Access callback for the entity API.
 */
function rooms_room_type_access($op, $type = NULL, $account = NULL) {
  return user_access('administer room types', $account);
}


/**
 * Gets an array of all room types, keyed by the type name.
 *
 * @param $type_name
 *   If set, the type with the given name is returned.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return RoomsRoomType[]
 *   Depending whether $type isset, an array of room types or a single one.
 */
function rooms_room_get_types($type_name = NULL, $reset = FALSE) {
  // entity_load will get the Entity controller for our room entity and call the load
  // function of that object.
  $types = entity_load_multiple_by_name('rooms_room_type', isset($type_name) ? array($type_name) : FALSE);
  return isset($type_name) ? reset($types) : $types;
}


/**
 * Menu argument loader; Load a room type by string.
 *
 * @param $type
 *   The machine-readable name of a room type to load.
 * @return
 *   A room type array or FALSE if $type does not exist.
 */
function rooms_room_type_load($type, $reset = FALSE) {
  return rooms_room_get_types($type, $reset);
}


/**
 * Fetch a room object. Make sure that the wildcard you choose 
 * in the room entity definition fits the function name here.
 *
 * @param $room_id
 *   Integer specifying the room id.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return
 *   A fully-loaded $room object or FALSE if it cannot be loaded.
 *
 * @see rooms_room_load_multiple()
 */
function rooms_room_load($room_id, $reset = FALSE) {
  $rooms = rooms_room_load_multiple(array($room_id), array(), $reset);
  return reset($rooms);
}


/**
 * Load multiple rooms based on certain conditions.
 *
 * @param $room_ids
 *   An array of room IDs.
 * @param $conditions
 *   An array of conditions to match against the {room} table.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return
 *   An array of room objects, indexed by room_id.
 *
 * @see entity_load()
 * @see rooms_room_load()
 */
function rooms_room_load_multiple($room_ids = array(), $conditions = array(), $reset = FALSE) {
  return entity_load('rooms_room', $room_ids, $conditions, $reset);
}


