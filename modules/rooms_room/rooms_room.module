/**
 * Implements hook_menu_local_tasks_alter().
 */
function rooms_room_menu_local_tasks_alter(&$data, $router_item, $root_path) {
  // Add action link 'admin/structure/rooms_rooms/add' on 'admin/structure/rooms_rooms'.
  if ($root_path == 'admin/rooms/rooms') {
    $item = menu_get_item('admin/rooms/rooms/add');
    if ($item['access']) {
      $data['actions']['output'][] = array(
        '#theme' => 'menu_local_action',
        '#link' => $item,
      );
    }
  }
}


