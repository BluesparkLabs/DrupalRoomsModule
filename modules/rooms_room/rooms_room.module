/**
 * Implement hook_entity_info().
 *
 * We define two entities here - the actual entity that will hold our domain
 * specific information and an entity that holds information about the different
 * types of entities. See here: http://drupal.org/node/977380 for a discussion on this
 * choice.
 */
function rooms_room_entity_info() {
  $return['rooms_room'] = array(
    'label' => t('Room'),
    // The entity class and controller class extend the classes provided by the
    // Entity API
    'entity class' => 'RoomsRoom',
    'controller class' => 'RoomsRoomController',
    'base table' => 'rooms_room',
    'fieldable' => TRUE,
    'entity keys' => array(
        'id' => 'rooms_room_id',
        'bundle' => 'type',
    ),
    // Bundles are defined by the rooms_room types below
    'bundles' => array(),
    // Bundle keys tell the FieldAPI how to extract information from the bundle objects
    'bundle keys' => array(
      'bundle' => 'type',
    ),
    'label callback' => 'entity_class_label',
    'uri callback' => 'entity_class_uri',
    'creation callback' => 'rooms_room_create',
    'access callback' => 'rooms_room_access',
    'module' => 'rooms_room',
    // The information below is used by the RoomsRoomUIController (which extends the EntityDefaultUIController)
    'admin ui' => array(
      'path' => 'admin/rooms/rooms',
      'file' => 'rooms_room.admin.inc',
      'controller class' => 'RoomsRoomUIController',
    ),
  );
  // The entity that holds information about the entity types	  
  $return['rooms_room_type'] = array(
    'label' => t('Room Type'),
    'entity class' => 'RoomsRoomType',
    'controller class' => 'RoomsRoomTypeController',
    'base table' => 'rooms_room_type',
    'fieldable' => FALSE,
    'bundle of' => 'rooms_room',
    'exportable' => TRUE,
    'entity keys' => array(
      'id' => 'id',
      'name' => 'type',
      'label' => 'label',
    ),
    'access callback' => 'rooms_room_type_access',
    'module' => 'rooms_room',
    // Enable the entity API's admin UI.
    'admin ui' => array(
      'path' => 'admin/rooms/room_types',
      'file' => 'rooms_room_type.admin.inc',
      'controller class' => 'RoomsRoomTypeUIController',
    ),
  );

  return $return;
}


/**
 * Implements hook_entity_info_alter().
 *
 * We are adding the info about the rooms_room types via a hook since to avoid a recursion
 * issue as loading the rooms_room types requires the entity info as well.
 */
function rooms_room_entity_info_alter(&$entity_info) {
  foreach (rooms_room_get_types() as $type => $info) {
    $entity_info['rooms_room']['bundles'][$type] = array(
      'label' => $info->label,
      'admin' => array(
        'path' => 'admin/rooms/room_types/manage/%rooms_room_type',
        'real path' => 'admin/rooms/room_types/manage/' . $type,
        'bundle argument' => 4,
        'access arguments' => array('administer rooms'),
      ),
    );
  }
}
  

/**
 * Implements hook_permission().
 */
function rooms_room_permission() {
  // We set up permisssions to manage entity types, manage all entities and the
  // permissions for each individual entity
  $permissions = array(
    'administer room types' => array(
      'title' => t('Administer rooms_room types'),
      'description' => t('Create and delete fields for room types, and set their permissions.'),
    ),
    'administer rooms' => array(
      'title' => t('Administer rooms'),
      'description' => t('Edit and delete all rooms'),
    ),  
  );
  
  //Generate permissions per rooms_room 
  foreach (rooms_room_get_types() as $type) {
    $type_name = check_plain($type->type);
    $permissions += array(
      "edit any $type_name room" => array(
        'title' => t('%type_name: Edit any room', array('%type_name' => $type->label)),
      ),
      "view any $type_name rooms_room" => array(
        'title' => t('%type_name: View any room', array('%type_name' => $type->label)),
      ),
    );
  }
  return $permissions;  
}


/**
 * Determines whether the given user has access to a room.
 *
 * @param $op
 *   The operation being performed. One of 'view', 'update', 'create', 'delete'
 *   or just 'edit' (being the same as 'create' or 'update').
 * @param $rooms_room
 *   Optionally a rooms_room or a rooms_room type to check access for. If nothing is
 *   given, access for all rooms_rooms is determined.
 * @param $account
 *   The user to check for. Leave it to NULL to check for the global user.
 * @return boolean
 *   Whether access is allowed or not.
 */
function rooms_room_access($op, $room = NULL, $account = NULL) {
  if (user_access('administer rooms', $account)) {
    return TRUE;
  }
  if (isset($room) && $type_name = $room->type) {
    if ($op == 'delete') {
      return TRUE;
    }
    $op = ($op == 'view') ? 'view' : 'edit';
    if (user_access("$op any $type_name room", $account)) {
      return TRUE;
    }
  }
  return FALSE;
}

/**
 * Access callback for the entity API.
 */
function rooms_room_type_access($op, $type = NULL, $account = NULL) {
  return user_access('administer room types', $account);
}


/**
 * Gets an array of all room types, keyed by the type name.
 *
 * @param $type_name
 *   If set, the type with the given name is returned.
 * @return RoomsRoomType[]
 *   Depending whether $type isset, an array of rooms_room types or a single one.
 */
function rooms_room_get_types($type_name = NULL) {
    // entity_load will get the Entity controller for our rooms_room entity and call the load
  // function of that object.
  $types = entity_load('rooms_room_type', isset($type_name) ? array($type_name) : FALSE);
  return isset($type_name) ? reset($types) : $types;
}


/**
 * Menu argument loader; Load a room type by string.
 *
 * @param $type
 *   The machine-readable name of a rooms_room type to load.
 * @return
 *   A rooms_room type array or FALSE if $type does not exist.
 */
function rooms_room_type_load($type) {
  return rooms_room_get_types($type);
}


/**
 * Fetch a room object.
 *
 * @param $rooms_room_id
 *   Integer specifying the rooms_room id.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return
 *   A fully-loaded $rooms_room object or FALSE if it cannot be loaded.
 *
 * @see rooms_room_load_multiple()
 */
function rooms_room_load($room_id, $reset = FALSE) {
  $rooms_rooms = rooms_room_load_multiple(array($room_id), array(), $reset);
  return reset($rooms_rooms);
}


/**
 * Load multiple rooms_rooms based on certain conditions.
 *
 * @param $rooms_room_ids
 *   An array of rooms_room IDs.
 * @param $conditions
 *   An array of conditions to match against the {rooms_room} table.
 * @param $reset
 *   A boolean indicating that the internal cache should be reset.
 * @return
 *   An array of rooms_room objects, indexed by rooms_room_id.
 *
 * @see entity_load()
 * @see rooms_room_load()
 */
function rooms_room_load_multiple($room_ids = array(), $conditions = array(), $reset = FALSE) {
  return entity_load('rooms_room', $room_ids, $conditions, $reset);
}


/**
 * Deletes a room.
 */
function rooms_room_delete(RoomsRoom $room) {
  $room->delete();
}


/**
 * Delete multiple rooms.
 *
 * @param $room_ids
 *   An array of room IDs.
 */
function rooms_room_delete_multiple(array $room_ids) {
  entity_get_controller('rooms_room')->delete($room_ids);
}


/**
 * Create a rooms_room object.
 */
function rooms_room_create($values = array()) {
  return entity_get_controller('rooms_room')->create($values);
}


/**
 * Saves a rooms_room to the database.
