/**
 * Implements hook_menu_local_tasks_alter().
 */
function rooms_room_menu_local_tasks_alter(&$data, $router_item, $root_path) {
  // Add action link 'admin/rooms/rooms/add' on 'admin/rooms/rooms'.
  if ($root_path == 'admin/rooms/rooms') {
    $item = menu_get_item('admin/rooms/rooms/add');
    if ($item['access']) {
      $data['actions']['output'][] = array(
        '#theme' => 'menu_local_action',
        '#link' => $item,
      );
    }
  }
}


/**
 * The class used for room entities
 */
class RoomsRoom extends Entity {
  
  public function __construct($values = array()) {
    parent::__construct($values, 'rooms_room');
  }

  protected function defaultLabel() {
    return $this->name;
  }

  protected function defaultUri() {
    return array('path' => 'room/' . $this->room_id);
  }
  
  
}


/**
 * The class used for room type entities
 */
class RoomsRoomType extends Entity {
  
  public $type;
  public $label;
  
  public function __construct($values = array()) {
    parent::__construct($values, 'rooms_room_type');
  }
  
}


/**
 * The Controller for RoomsRoom entities
 */
class RoomsRoomController extends EntityAPIController {
  public function __construct($entityType) {
    parent::__construct($entityType);
  }


  /**
   * Create a room - we first set up the values that are specific
   * to our room schema but then also go through the EntityAPIController
   * function.
   * 
   * @param $type
   *   The machine-readable type of the room.
   *
   * @return
   *   A room object with all default fields initialized.
   */
  public function create(array $values = array()) {
    $room_type = rooms_room_type_load($values['type'], TRUE);
    $values['base_price'] = $room_type->data['base_price'];
    $values['sleeps'] = $room_type->data['sleeps'];

    // Add values that are specific to our Room
    $values += array( 
      'room_id' => '',
      'is_new' => TRUE,
      'title' => '',
      'created' => '',
      'changed' => '',
      'data' => array(),
    );
    
    $room = parent::create($values);
    return $room;
  }
  
  /**
   * Overriding the buldContent function to add entity specific fields
   */
  public function buildContent($entity, $view_mode = 'full', $langcode = NULL, $content = array()) {
    $content = parent::buildContent($entity, $view_mode, $langcode, $content);
    $content['rooms_room_extra_data'] =  array(
      '#markup' => theme('rooms_room_extra_data', array('rooms_room_extra_data' => check_plain($entity->data['extra_data']), 'rooms_room' => $entity)),
    );

    return $content;
  }
  
}


